{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <a href="{{ path('app_promocodes_report', {promocodeId: promocode.id}) }}">Signaler le code promo</a>
    <a href="{{ path('app_promocodes_save', {promocodeId: promocode.id}) }}">Sauvegarder le code promo</a>

    <h2>{{ promocode.title }}</h2>
    <p>{{ promocode.description }}</p>
    <p>{{ promocode.promoCodeValue }}</p>

    <h4>commentaires</h4>
    <form action="{{ path('app_add_promocode_comment', {promocodeId: promocode.id}) }}" method="post">
        <textarea id="comment-content" name="content" rows="5" cols="33"></textarea>
        <button type="submit">Ajouter</button>
    </form>

    {% for comment in comments %}
        <h6>{{ comment.utilisateur.pseudo }}</h6> <span>{{ comment.datetime }}</span>
        <p>{{ comment.content }}</p>
    {% endfor %}
{% endblock %}