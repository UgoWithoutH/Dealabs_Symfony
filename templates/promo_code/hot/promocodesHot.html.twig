{% extends 'base.html.twig' %}

{% block title %}Hello DealsController!{% endblock %}

{% block body %}
    <a href="{{ path('app_promocodes') }}">Tous les codes promo</a>
    <a href="{{ path('app_promocodes_hot') }}">Hot</a>
    {% for promocode in promocodes %}
        <div>
            <div>
                <button>
                    <a href="{{ path('app_promocodes_decrease_hotlevel', {promocodeId: promocode.id}) }}">
                        -
                    </a>
                </button>
                {{ promocode.hotLevel }}
                <button>
                    <a href="{{ path('app_promocodes_increase_hotlevel', {promocodeId: promocode.id}) }}">
                        +
                    </a>
                </button>
            </div>
            <button>
                <a href="{{ path('app_promocode_detail', {promocodeId: promocode.id}) }}">
                    <h2>{{ promocode.title }}</h2>
                    <p>{{ promocode.description }}</p>
                    <p>{{ promocode.promoCodeValue }}</p>
                </a>
            </button>
        </div>
    {% endfor %}
{% endblock %}