{% extends 'base.html.twig' %}

{% block title %}Hello SpotlightController!{% endblock %}

{% block body %}
    <a href="{{ path('app_spotlight') }}">A la une</a>
    <a href="{{ path('app_spotlight_hot') }}">Hot</a>
    {% for deal in filteredDeals %}
        <div>
            <div>
                <button>
                    <a href="{{ path('app_deals_decrease_hotlevel', {dealId: deal.id}) }}">
                        -
                    </a>
                </button>
                {{ deal.hotLevel }}
                <button>
                    <a href="{{ path('app_deals_increase_hotlevel', {dealId: deal.id}) }}">
                        +
                    </a>
                </button>
            </div>
            <button>
                <a href="{{ path('app_deal_detail', {dealId: deal.id}) }}">
                    <h2>{{ deal.title }}</h2>
                    <p>{{ deal.description }}</p>
                </a>
            </button>
        </div>
    {% endfor %}
{% endblock %}
