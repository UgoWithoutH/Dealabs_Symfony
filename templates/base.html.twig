<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <header>
        <div class="topnav">
            <div>
                <a class="active" href="{{ path('app_spotlight') }}">Home</a>
            </div>
            <div>
                <a href="{{ path('app_deals') }}">
                    Bons plans
                </a>
            </div>
            <div>
                <a href="{{ path('app_promocodes') }}">
                    Codes promo
                </a>
            </div>
            <div>
                <a href="{{ path('app_add_deal') }}">
                    Poster un bon plan
                </a>
            </div>
            <div>
                <a href="{{ path('app_add_promocode') }}">
                    Poster un code promo
                </a>
            </div>
            <div>
                <a href="{{ path('app_profil_insight') }}">
                    Profil
                </a>
            </div>
            <div>
                <a href="{{ path('app_settings_profile') }}">
                    Paramètres
                </a>
            </div>
            <div>
                <form action="{{ path('app_search') }}" method="GET">
                    <input type="text" name="searchTerm" placeholder="Recherche">
                    <button type="submit">Rechercher</button>
                </form>
            </div>
        </div>
    </header>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
